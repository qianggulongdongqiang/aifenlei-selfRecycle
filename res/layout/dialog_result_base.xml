<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_time"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/actionbar_item_size" />

        <TextView
            android:id="@+id/dialog_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_time"
            android:gravity="left"
            android:layout_weight="3"
            android:textColor="@color/dialog_info"
            android:textSize="@dimen/actionbar_item_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_account"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/actionbar_item_size" />

        <TextView
            android:id="@+id/dialog_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_account"
            android:gravity="left"
            android:layout_weight="3"
            android:textColor="@color/dialog_info"
            android:textSize="@dimen/actionbar_item_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_owner"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/actionbar_item_size" />

        <TextView
            android:id="@+id/dialog_owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_owner"
            android:gravity="left"
            android:layout_weight="3"
            android:textColor="@color/dialog_info"
            android:textSize="@dimen/actionbar_item_size" />
    </LinearLayout>
</LinearLayout>