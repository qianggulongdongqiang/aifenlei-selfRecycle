<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_result_main0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_success_welcome"
        android:gravity="right"
        android:layout_marginBottom="@dimen/dialog_dot_gap"
        android:textStyle="bold"
        android:textColor="@color/dialog_info"
        android:textSize="@dimen/dialog_weight_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_result_maint1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_success_before"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/dialog_weight_left" />

        <TextView
            android:id="@+id/dialog_result_main1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_success_before"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/dialog_info"
            android:textSize="@dimen/dialog_weight_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_result_maint2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_success_income"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/dialog_weight_left" />

        <TextView
            android:id="@+id/dialog_result_main2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_success_income"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/dialog_info"
            android:textSize="@dimen/dialog_weight_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_result_maint3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_success_after"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/dialog_default"
            android:textSize="@dimen/dialog_weight_left" />

        <TextView
            android:id="@+id/dialog_result_main3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/info_margin"
            android:text="@string/dialog_success_after"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/dialog_yellow"
            android:textSize="@dimen/dialog_weight_right" />
    </LinearLayout>
</LinearLayout>